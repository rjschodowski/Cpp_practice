//Solved!

#include <iostream>
using std::cin;
using std::cout;
using std::endl;

int main() {
  int x;
  int y = 6;
  //create counter to determine # of rows
  for(x=6; x>0; x--) {
    for(y=1; y<x; y++) {
      cout << "& ";
    }
    cout << "& "<< endl;
  } 
}

//create counter to print correct # of & for each row
//row 1 should have 6 &s, row 2 should have 5 &s, etc
