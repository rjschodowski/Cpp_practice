#include <iostream>
using std::cin;
using std::cout;
using std::endl;

int main() {
  int x;
  int y = 6;
  //create counter to determine # of rows
  for(x=0; x<6; x++) {
    while (y > 0) {
      cout << "& ";
      y--;
    } cout << endl;
  } 
}

